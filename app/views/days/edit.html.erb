<h1><%= params[:date] %></h1>

<%= form_tag dones_path, method: :post, class: "navbar-form navbar-left search-form" do %>
  <%= text_area_tag(
      :dones,
      @dones,
      class: "form-control max-size borderless"
  ) %>

  <%= text_field_tag :date, params[:date], hidden: true %>

  <div>
    <%= button_tag :submit %>
  </div>
<% end %>

<style media="screen">
  .max-size {
    width: 80vw;
    height: 80vh;
  }

  .borderless {
    border-width: 0;
  }
</style>
